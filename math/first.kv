WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    ShapeWindow:
    CircleWindow:
    RectangleWindow:
    TriangleWindow:
    SquareWindow:


<MainWindow>:
    name: "main"

    GridLayout:
        cols:1
        canvas.before:
            Color:
                rgba: (1,1,1,.8)
            Rectangle:
                source : 'download.jpg'
                size: self.size
                pos: self.pos


        rows:2
        Label:
            text: "Mathematics"
            font_size: 40
        GridLayout:
            rows: 5

            Button:
                text: "Lesson1-Story"
                background_color: (0.06, .36, .4, .775)
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            Button:
                text: "Lesson2-Counting"
                background_color: (0.06, .36, .4, .775)
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction = "left"
            Button:
                text: "Lesson3-Addition"
                background_color: (0.06, .36, .4, .775)
                on_release:
                    app.root.current = "fourth"
                    root.manager.transition.direction = "left"
            Button:
                text: "Lesson4-Subtraction"
                background_color: (0.06, .36, .4, .775)
                on_release:
                    app.root.current = "fifth"
                    root.manager.transition.direction = "left"

            Button:
                text: "Lesson5-Shapes"
                background_color: (0.06, .36, .4, .775)
                on_release:
                    app.root.current = "shape"
                    root.manager.transition.direction = "left"

            Button:
                text: "back"
                background_color: (0.06, .36, .4, .775)
                on_release:
                    app.root.current : "second"


<SecondWindow>:
    name: "second"
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            source : 'donkey.jpg'
            size: self.size
            pos: self.pos
    Button:
        text: "Play"
        background_color: (0.06, .36, .4, .675)
        pos: (258,250)
        size_hint: .4,.125
        font_size: 40
        on_press: root.btn_clk1()

    Button:
        text: "Go Back"
        background_color: (0.06, .36, .4, .675)
        pos: (258,20)
        size_hint: .4,.125
        font_size: 40

        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"






